.bubble_container{ 
  backdrop-filter: blur(5px);
  box-sizing: border-box;
  aspect-ratio: 16/9;
  .inner_wrap {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    padding: 10px 10px 0 10px;
    .chart_bg {
      width: 100%;
      height: 100%;
      z-index: -1;
      position: absolute;
      top: 0;
      border-radius: 50%;
    }
  }
}
